<!--ltefreq.wxml-->
<view class="page">
  <view class="page__hd show-bg">
      <view class="page__title">LTE</view>
  </view>
  <view class="page__bd page__bd_spacing show-bg">
    <view class="weui-tab show-bg">
      <view class="weui-navbar show-bg">
        <block wx:for="{{tabs}}" wx:key="*this">
            <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="navbarClick">
                <view class="weui-navbar__title">{{item}}</view>
            </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <view class="button-sp-area">
          <view class="weui-tab__content" hidden="{{bandTabIndex != 0}}">
            <!--button wx:for="{{itemsFDD}}" wx:key="band" bindtap="selectBand" class="weui-btn mini-btn lte-btn" id="{{item.band}}" data-index="{{index}}" type="{{band == item.band ? 'primary':'default'}}" size="mini">{{item.value}}</button-->
            <swiper indicator-dots="true" bindchange="fddSwiper">
              <block wx:for="{{itemsFDDswiper}}" wx:for-item="itemsFDD" wx:for-index="swiperindex">
                <swiper-item data-swiperindex="{{swiperindex}}">
                  <button wx:for="{{itemsFDD}}" wx:key="band" bindtap="selectBand" class="weui-btn mini-btn lte-btn" id="{{item.band}}" data-index="{{index}}" type="{{band == item.band ? 'primary':'default'}}" size="mini">{{item.value}}</button>
                </swiper-item>
              </block>
            </swiper>
          </view>
          <view class="weui-tab__content" hidden="{{bandTabIndex != 1}}">
            <button wx:for="{{itemsTDD}}" wx:key="band" bindtap="selectBand" class="weui-btn mini-btn lte-btn" id="{{item.band}}" data-index="{{index}}" type="{{band == item.band ? 'primary':'default'}}" size="mini">{{item.value}}</button>
          </view>
        </view>
      </view>
    </view>
    <view class="show-bg">
      <text>Input channel No.ï¼š</text>
      <text style="color:gray">[{{chanPrompt}}]</text>
      <input bindinput="inputChan" type="number" style="color:green" placeholder='input here'></input>
    </view>
  </view>
  <view>
    <view>
      <text>UL frequency:</text>
      <text style="color:green" placeholder=''>{{textFreqUL}}</text>
      <text>MHz</text>
    </view>
    <view>
      <text>DL frequency:</text>
      <text style="color:green" placeholder=''>{{textFreqDL}}</text>
      <text>MHz</text>
    </view>
    <view class="button-sp-area">
      <button class="weui-btn" type="primary" bindtap="calculateFreq">get frequency</button>
    </view>
  </view>

</view>