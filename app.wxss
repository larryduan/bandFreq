.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.page__hd {
  padding: 2px;
  height:60rpx;
}
.page__bd {
    padding-bottom: 10px;
}
.page__bd_spacing {
    padding-left: 5px;
    padding-right: 5px;
}
.page__title {
  text-align: center;
  font-size: 20px;
  font-weight: 400;
  position:relative;
  bottom:10rpx;
}
.show-bg{
  border: 2rpx solid #EB602E;
}